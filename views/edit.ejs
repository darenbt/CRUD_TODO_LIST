<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">

    <title>Todo App</title>
    <!--GOOGLE FONT-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@500&display=swap" rel="stylesheet">
    <!--ICONS-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <!--STYLESHEET LINK-->
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <section class= "todo-container">
      <h2>Edit List Item</h2>
      <section class= "todo">
        <ul class="todo-list">
          <% todoTasks.forEach(data => {%>
            <% if (data._id==idTask) { %>
              <li class = 'todo-list-item'>
                <form action="/edit/<%= data._id %>" method="post">
                  <input type="text" name="title" value="<%=data.title %>">
                  <textarea name="content" rows="6" cols="45"><%=data.content%></textarea>
                  <button type="submit" class="confirm">Confirm</button>
                  <a href="/" class ="cancel">Cancel</a>
                </form>
              </li>
              <% } else { %>
                  <li class="todo-list-item">
                    <div class="todo-list-item-title">
                      <%= data.title %>
                    </div>
                    <div class="todo-list-item-content">
                      <%= data.content %>
                    </div>
                    <a href="/edit/<%=data._id %>" class="edit"><span class="fas fa-edit"></span></a>
                    <a href="/remove/<%=data._id %>" class="remove"><span class="fas fa-times"></span></a>
                  </li>
                  <% } %>
                  <% }) %>
                </ul>
      </section>
    </section>
  </body>
</html>
